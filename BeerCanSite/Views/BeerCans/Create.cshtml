@model BeerCanSite.Models.BeerCan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BeerCan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BeerCanName" class="control-label"></label>
                <input asp-for="BeerCanName" class="form-control" />
                <span asp-validation-for="BeerCanName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeerBrand" class="control-label"></label>
                <input asp-for="BeerBrand" class="form-control" />
                <span asp-validation-for="BeerBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeerCanDescription" class="control-label"></label>
                <input asp-for="BeerCanDescription" class="form-control" />
                <span asp-validation-for="BeerCanDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufactureDate" class="control-label"></label>
                <input asp-for="ManufactureDate" class="form-control" />
                <span asp-validation-for="ManufactureDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:20px; padding-bottom:20px">
                <label asp-for="TopType" class="control-label"></label>
                <select asp-for="TopType" asp-items="@Html.GetEnumSelectList<TopType>()">
                    <option selected="selected" value="1">Please select</option>
                </select>
                <span asp-validation-for="TopType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenedStatus" class="control-label"></label>
                <select asp-for="OpenedStatus" asp-items="@Html.GetEnumSelectList<OpenedStatus>()">
                    <option selected="selected" value="1">Please select</option>
                </select>
                <span asp-validation-for="OpenedStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContainerSize" class="control-label"></label>
                <input asp-for="ContainerSize" class="form-control" />
                <span asp-validation-for="ContainerSize" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Circulated" /> @Html.DisplayNameFor(model => model.Circulated)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Instructional" /> @Html.DisplayNameFor(model => model.Instructional)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
